<Window
    x:Class="Pic2PixelStylet.Pages.InputProjectNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pic2PixelStylet.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="输入项目名称"
    Width="300"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  提示文本  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            Text="请输入项目名称：" />

        <!--  输入框  -->
        <TextBox
            x:Name="ProjectNameTextBox"
            TextChanged="ProjectNameTextBox_TextChanged"
            Grid.Row="1"
            Height="25"
            Margin="0,0,0,20" />

        <!--  错误提示  -->
        <TextBlock
            x:Name="ErrorTextBlock"
            Grid.Row="2"
            Margin="0,0,0,10"
            Foreground="{DynamicResource SystemFillColorCriticalBrush}"
            Text="项目名称不能为空！"
            TextWrapping="Wrap"
            Visibility="Visible" />

        <!--  按钮区域  -->
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="OkButton"
                IsEnabled="False"
                Width="80"
                Margin="0,0,10,0"
                Click="OkButton_Click"
                Content="确定"
                Style="{DynamicResource AccentButtonStyle}" />
            <Button
                Width="80"
                Background="{DynamicResource SystemFillColorCriticalBrush}"
                Click="CancelButton_Click"
                Content="取消" />
        </StackPanel>
    </Grid>
</Window>
